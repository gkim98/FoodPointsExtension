{
  "manifest_version": 2,

  "name": "Food Points tracker",
  "description": "This extension tracks your overall food points.",
  "version": "1.0",

  "browser_action": {
    "default_popup": "popup.html"
  },

  "permissions": [
        "activeTab",
        "<all_urls>",
        "storage",
        "notifications",
        "contextMenus"
    ]
}

