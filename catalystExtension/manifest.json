{
  "manifest_version": 2,
  "name": "Food Points Tracker",
  "description": "This extension tracks your overall food points.",
  "version": "1.0",

  "browser_action": {
    "default_popup": "popup.html"
  },

  "background": {
  "scripts": ["testpopup.js"],
  "persistent": false
  },

  "permissions": [
        "storage",
        "notifications",
        "contextMenus"
    ]
}
